<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>io.seequick</groupId>
  <artifactId>strimzi-mcp-server</artifactId>
  <name>Strimzi MCP Server</name>
  <version>0.2.0-SNAPSHOT</version>
  <description>MCP server for interacting with Strimzi Kafka on Kubernetes</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.4.2</version>
        <configuration>
          <archive>
            <manifest>
              <mainClass>io.seequick.mcp.StrimziMcpServer</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.6.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>io.seequick.mcp.StrimziMcpServer</mainClass>
                </transformer>
                <transformer />
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <mcp-sdk.version>0.1710</mcp-sdk.version>
    <maven.compiler.source>21</maven.compiler.source>
    <fabric8.version>7.5.1</fabric8.version>
    <strimzi.version>0.49.1</strimzi.version>
    <maven.compiler.target>21</maven.compiler.target>
    <slf4j.version>2.0.17</slf4j.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>
